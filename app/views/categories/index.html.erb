<h3>Categories</h3>
<ol>
<% @categories.each do |category| %>
  <li><%= link_to category.title, category_path(category) %></li>
  <ul> - Average Rating - <% if category.ratings.count != 0 %>
    <%=Rating.average(category.ratings)%></ul><br />
    <%else%>
      <%="This category's lessons have yet to be rated"%></ul>
      <%end%>
<% end %>
</ol>