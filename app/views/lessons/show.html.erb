<h3><%= @lesson.title %></h3>
<ul>
  <% @lesson.comments.each do |comment|%>
    <li><%=comment.user.id%>: <%=comment.content%></li>
    <!--Until you figure out why devise is hiding the email just use the user_id for verification-->
    <%end%>
  </ul>



  <%= form_tag(add_comment_path) do %>
  <%= text_area_tag :content%>
  <%= hidden_field_tag "lesson_id", @lesson.id%>
  <%= submit_tag "Add Comment" %>
    <% end %>
