<h3>Profile of <%=@user.email%> the <%=@user.role%></h3>
  <h4>All Comments</h4>
    <ol>
        <% @user.comments.each do |comment|%>
      <li>Lesson: <%=link_to comment.lesson.parse_title, lesson_path(comment.lesson)%> | 
        <br /> <%=link_to comment.content, lesson_comment_path(comment.lesson, comment)%> | 
        Written on: <%=comment.created_at.strftime('%A, %b %d, %Y')%>
      </li>
      <br />
      <br />
    </ol>
    <br />
    <%end%>

  <h4>All Ratings</h4>
    <ol>

    <%@user.ratings.each do |rating| %>
      <li>Lesson: <%=link_to rating.lesson.parse_title, lesson_path(rating.lesson)%> 
        <ul>Rating: <%=rating.star_rating%> out of 5
        </ul>       
        <ul><%=link_to "Details", lesson_rating_path(rating.lesson, rating)%>  Rated on: <%=rating.created_at.strftime('%A, %b %d, %Y')%></ul> 
      </li>
    <%end%>
  </ol>

  <%= button_to "Delete Profile and all Traces of Existence", user_path(@user), method: :delete%>
